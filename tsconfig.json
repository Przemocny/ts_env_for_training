{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@common": [
        "src/common"
      ],
      "@data/*": [
        "src/data/*"
      ]
    },

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ]
}